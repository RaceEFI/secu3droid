<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ErrorsActivity" >

    <TextView
        android:id="@+id/errorsTextViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/status_offline"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/errorsRealtimeErrorsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/errorsTextViewStatus"
        android:layout_alignParentLeft="true"
        android:text="Realtime errors reading"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/errorsInertionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/errorsRealtimeErrorsCheckBox"
        android:layout_alignParentLeft="true"
        android:text="Inertion display"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_above="@+id/errorsInertionCheckBox" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/errorsCKPSCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CKPS Error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsEepromCrcCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EEPROM CRC Error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsFirmwareCrcCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firmware CRC Error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsDetonationProcessorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No response from detonation processor"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsDetonationDetectedCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detonation was detected"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsPressureSensorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure sensor error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsTemperatureSensorError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature sensor error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsVoltageErrorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abnormal voltage"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsDwellControlErrorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dwell control error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <CheckBox
                android:id="@+id/errorsPhaseSensorErrorCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase sensor error"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>