<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">
    
	<RelativeLayout
	    android:id="@+id/anglesLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/anglesTextView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:text="@string/angles_min_angle_title"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
		    android:id="@+id/anglesMinimalAngleEditText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesTextView1"
		    android:ems="10"
		    android:inputType="numberSigned|numberDecimal"
		    android:text="@string/units_zero_float" />

		<TextView
		    android:id="@+id/anglesTextView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesMinimalAngleEditText"
		    android:text="@string/angles_max_angle_title"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
		    android:id="@+id/anglesMaximalAngleEditText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesTextView2"
		    android:ems="10"
		    android:inputType="numberSigned|numberDecimal"
		    android:text="@string/units_zero_float" >

		    <requestFocus />
		</EditText>

		<TextView
		    android:id="@+id/anglesTextView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesMaximalAngleEditText"
		    android:text="@string/angles_angle_decrement_step_title"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
		    android:id="@+id/anglesDecrementStepEditText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesTextView3"
		    android:ems="10"
		    android:inputType="numberDecimal"
		    android:text="@string/units_zero_float" />

		<TextView
		    android:id="@+id/anglesTextView4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesDecrementStepEditText"
		    android:text="@string/angles_angle_increment_step_title"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
		    android:id="@+id/anglesIncrementStepEditText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesTextView4"
		    android:ems="10"
		    android:inputType="numberDecimal"
		    android:text="@string/units_zero_float" />

		<CheckBox
		    android:id="@+id/mainShowRawDataCheckBox"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/anglesIncrementStepEditText"
		    android:text="@string/angles_zero_angle_title"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
		    android:id="@+id/anglesTextView5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/mainShowRawDataCheckBox"
		    android:text="@string/angles_octane_correction_title"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<EditText
		    android:id="@+id/anglesCorrectionAngleEditText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/anglesTextView5"
		    android:ems="10"
		    android:inputType="numberSigned|numberDecimal"
		    android:text="@string/units_zero_float" />

		<TextView
		    android:id="@+id/anglesTextView6"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/anglesMinimalAngleEditText"
		    android:layout_toRightOf="@+id/anglesMinimalAngleEditText"
		    android:text="@string/units_degree"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
		    android:id="@+id/anglesTextView7"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/anglesMaximalAngleEditText"
		    android:layout_toRightOf="@+id/anglesMaximalAngleEditText"
		    android:text="@string/units_degree"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
		    android:id="@+id/anglesTextView8"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/anglesDecrementStepEditText"
		    android:layout_toRightOf="@+id/anglesDecrementStepEditText"
		    android:text="@string/units_degree"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
		    android:id="@+id/anglesTextView9"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/anglesIncrementStepEditText"
		    android:layout_toRightOf="@+id/anglesIncrementStepEditText"
		    android:text="@string/units_degree"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
		    android:id="@+id/anglesTextView10"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/anglesCorrectionAngleEditText"
		    android:layout_toRightOf="@+id/anglesCorrectionAngleEditText"
		    android:text="@string/units_degree"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
	
	</RelativeLayout>
	
</ScrollView>	